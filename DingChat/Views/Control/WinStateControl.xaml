<UserControl x:Class="cn.lds.chatcore.pcw.Views.Control.WinStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cn.lds.chatcore.pcw.Views.Control"
             Height="32" Width="110">
    <Grid>
        <Button x:Name="x"  HorizontalAlignment="Right"  Style="{DynamicResource xButtonStyle}" VerticalAlignment="Top"  Height="30" Width="30" Margin="0,0,0,0" Grid.Row="0" Click="___Click"/>
        <Button x:Name="tomax"  HorizontalAlignment="Right"  Style="{DynamicResource tomaxButtonStyle}" VerticalAlignment="Top"  Height="30" Width="30" Margin="0,0,40,0"  Grid.Row="0" Click="tomax_Click"/>
        <Button x:Name="frommax"  HorizontalAlignment="Right" Style="{DynamicResource restoreButtonStyle}" VerticalAlignment="Top" Height="30" Width="30" Margin="0,0,40,0"  Grid.Row="0" Visibility="Collapsed" Click="frommax_Click"/>
        <Button x:Name="__"  HorizontalAlignment="Right"  Style="{DynamicResource -ButtonStyle}" VerticalAlignment="Top" Height="30" Width="30" Margin="0,0,80,0"  Grid.Row="0" Click="___Click"/>
    </Grid>
</UserControl>
